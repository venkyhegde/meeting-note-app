<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/newentry.css' />
</head>
<body>
<% include ./partial/header.ejs %>

<div class="container">
    <div class="row justify-content-center mt-3">
    <div class="col-6">
        <h3>Virtual Meeting - New Meeting Note</h3>
    </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 center-align">

            <div class="card mt-2">
                <div class="card-header">
                    Add New Note
                </div>
                <div class="card-body">
                    <% if(message !== undefined && message!= ''){%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p><%= message %></p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                   <% }%>
                    <form action="/newEntry" method="post">
                        <div class="form-group">

                            <select class="form-control form-control-sm" name="userName">
                                <option value="">Select Name</option>
                                <%
                                    for(var i=0; i< users.length; i++){%>
                                    <option value="<%= users[i] %>"><%= users[i] %></option>
                                    <%}
                                %>
                            </select>
                        </div>

                        <div class="form-group">
                            <select class="form-control form-control-sm" name="projectName">
                                <option value="">Select Project</option>
                                <%
                                for(var i=0; i< projects.length; i++){%>
                                    <option value="<%= projects[i] %>"><%= projects[i] %></option>
                                <%}
                                %>
                            </select>
                        </div>

                        <div class="form-group">
                            <!--<label for="formGroupExampleInput">Yestraday's worl</label>-->
                            <textarea class="form-control" name="yestDayWork"
                                      placeholder="*Yestrday's work..."></textarea>
                        </div>
                        <div class="form-group">
                            <!--<label for="formGroupExampleInput2">Today's Work</label>-->
                            <textarea class="form-control"  name="toDaysWork" placeholder="Today's work..."></textarea>
                        </div>

                        <div class="form-group">
                            <!--<label for="formGroupExampleInput2">Impediments</label>-->
                            <input type="text" class="form-control" name="impediments" placeholder="*impediments...">
                        </div>

                        <div class="mt-5 text-right">
                        <button type="submit" class="btn btn-primary">Add Note</button>
                        <button type="reset" class="btn btn-warning">Reset</button>
                        </div>
                    </form>
                </div>
            </div>



        </div>
    </div>



</div>




</body>
</html>